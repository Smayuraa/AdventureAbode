
<% if (success && success.length > 0) { %>
  <div class="alert alert-success alert-dismissible fade show col-6 mt-4" role="alert">
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<% if (danger && danger.length > 0) { %>
  <div class="alert alert-danger alert-dismissible fade show col-6 mt-4" role="alert">
    <%= danger %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>
